@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

@if(TempData["Success"]!=null)
{
    <h2>@TempData["Success"]</h2>
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Grocery Item List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                Add New Grocery Item
            </a>
        </div>
    </div>

<table class="table table-border table-striped" style="width=100%">
    <thead>
        <tr>
            <th>
                Grocery Item Name
            </th>
            <th>
                Grocery Item Quantity
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.DisplayOrder
                </td>
                <td>
                    <div classclass="=w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                    </div>
                        <div classclass="=w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
                        </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

